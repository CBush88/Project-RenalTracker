@model IEnumerable<RenalTracker.Models.Food>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BrandedFood!.BrandOwner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoodCategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublicationDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Where(i => i.FdcId >= 344604 && i.FdcId <= 344634)) {
        <tr>
            <td>
                @if(item.BrandedFood?.BrandOwner != null)
                {
                    @Html.DisplayFor(modelItem => item.BrandedFood.BrandOwner)
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FoodCategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublicationDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FdcId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FdcId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FdcId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
